@using Car_Delivery_System.Models
@using Car_Delivery_System.CommonEntities
@model Customer
@{
    ViewBag.Title = "CustomerDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <h3>Customer Detail</h3>
    <div class="page-breadcrumb">
        <ol class="breadcrumb">
            <li><a href="~/Home/Index">Home</a></li>
            <li class="active">Manage Customers</li>
            <li class="active">Customer Detail</li>
        </ol>
    </div>
</div>
<div id="main-wrapper">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">@Model.name</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditCustomer", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @*@Html.AntiForgeryToken()*@
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Id, new { placeholder = "id", @class = "form-control", @required = "required", value = Model.Id, style = "display: none" })
                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            @Html.TextBoxFor(m => m.name, new { placeholder = "Name", @class = "form-control", @required = "required", value = Model.name })
                        </div>
                        <div class="form-group">
                            <label for="Address">Address</label>
                            @Html.TextBoxFor(m => m.address, new { placeholder = "Address", @class = "form-control", @required = "required", value = Model.address })
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Numner</label>
                            @Html.TextBoxFor(m => m.phonenumber, new { placeholder = "Phone Number", @class = "form-control", @required = "required", value = Model.phonenumber })
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            @Html.TextBoxFor(m => m.email, new { placeholder = "Email", @class = "form-control", value = Model.email })
                        </div>
                        <div class="form-group">
                            <label for="identity">Identification Number</label>
                            @Html.TextBoxFor(m => m.identificationNo, new { placeholder = "Identification Number", @class = "form-control", @required = "required", value = Model.identificationNo })
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="cancel" class="btn btn-primary">Cancel</button>
                    }
                </div>
            </div>
        </div>
    </div><!-- Row -->
</div><!-- Main Wrapper -->
