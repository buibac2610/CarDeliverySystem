@using Car_Delivery_System.Models
@model ReportViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type='text/javascript'>
    $(function () {
        $('.date-picker').datepicker();
    })


</script>

<div class="page-title">
    <h3>Sale Report</h3>
    <div class="page-breadcrumb">
        <ol class="breadcrumb">
            <li><a href="~/Home/Index">Home</a></li>
            <li class="active">Sale Report</li>
        </ol>
    </div>
</div>
<div id="main-wrapper">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Report Filter</h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("ExportRP", "Report", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {

                        <div class="form-group">
                            <label for="from">From</label>
                            @Html.TextBoxFor(m => m.startDate, new { placeholder = "From", @class = "form-control date-picker", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label for="to">To</label>
                            @Html.TextBoxFor(m => m.endDate, new { placeholder = "To", @class = "form-control date-picker", @required = "required" })
                        </div>
                        <button type="submit" class="btn btn-primary">Export</button>
                    }
                </div>
            </div>
            @{
                if (!string.IsNullOrWhiteSpace(ViewBag.message))
                {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.message
                        </div>
                }
                }
        </div>
    </div><!-- Row -->
</div><!-- Main Wrapper -->
<script>


</script>